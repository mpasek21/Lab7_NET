@model IEnumerable<Lab7.Models.Invoice>

@{
    ViewData["Title"] = "MyOrders";
}

<h1>MyOrders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingAddress)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.BillingCity)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.BillingCountry)
            </th> *@
            @* <th>
            @Html.DisplayNameFor(model => model.BillingPostalCode)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingAddress)
                    @Html.DisplayFor(modelItem => item.BillingCity)
                    @Html.DisplayFor(modelItem => item.BillingPostalCode)
                    @Html.DisplayFor(modelItem => item.BillingCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerId)
                </td>
                <td>

                    <a asp-action="OrderDetails" asp-route-id="@item.InvoiceId">Details</a>

                    
                </td>
            </tr>
        }
    </tbody>
</table>


